@model NurseVolunteeringSystem.Models.CareVisit

@{
    ViewData["Title"] = "AddCareVisit";
}
<div class="w-100 bg-primary">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ml-5" style="text-align:center">Add Care Visit</h5>
    </div>
</div>
<hr />
<br />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="AddCareVisit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VisitDate" class="control-label">Visit Date *</label>
                <input asp-for="VisitDate" type="date" class="form-control" />
                <span asp-validation-for="VisitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApproximateArriveTime" class="control-label">Approximate Arrive Time *</label>
                <input asp-for="ApproximateArriveTime" type="time" class="form-control" />
                <span asp-validation-for="ApproximateArriveTime" class="text-danger"></span>
            </div>
            <input asp-for="CareContractID" class="form-control" hidden value="@ViewBag.ContractID" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="CareContract" asp-area="Nurse" asp-action="ListAssignedContracts" class="btn btn-primary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
