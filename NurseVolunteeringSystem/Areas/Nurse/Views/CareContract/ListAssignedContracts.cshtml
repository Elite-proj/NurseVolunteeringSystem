@model IEnumerable<NurseVolunteeringSystem.Models.CareContract>

@{
    ViewData["Title"] = "ListAssignedContracts";
}
<div class="w-100 bg-primary">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ml-5" style="text-align:center">List  Assigned Contracts</h5>
    </div>
</div>
<hr />


@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ContractDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddressLine1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddressLine2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Suburb)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WoundDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartCareDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndCareDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContractStatus)
                </th>



                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string contractDate = item.ContractDate?.ToString("dd/MM/yyyy");
                string startCareDate = item.StartCareDate?.ToString("dd/MM/yyyy");
                string endCareDate = item.EndCareDate?.ToString("dd/MM/yyyy");
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => contractDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressLine1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressLine2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Suburb.SuburbName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WoundDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => startCareDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => endCareDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContractStatus)
                    </td>


                    <td>
                        <a asp-controller="CareContract" asp-action="ListPatientConditions" asp-area="Nurse" asp-route-id="@item.CareContractID" class="btn btn-outline-primary">View patient conditions</a><br />
                        <a asp-controller="CareContract" asp-action="EditContract" asp-area="Nurse" asp-route-id="@item.CareContractID" class="btn btn-outline-info">Edit contract</a><br />
                        <a asp-controller="CareContract" asp-area="Nurse" asp-action="AddCareVisit" asp-route-id="@item.CareContractID" class="btn btn-outline-success">Add care visit</a> <br />
                        <a asp-controller="CareContract" asp-area="Nurse" asp-action="ListCareVisits" asp-route-id="@item.CareContractID" class="btn btn-outline-warning">List care visits</a><br />
                        <a asp-controller="CareContract" asp-area="Nurse" asp-action="CloseContract" asp-route-id="@item.CareContractID" class="btn btn-outline-danger">Close contract</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="bg-warning text-center text-white p-2">No assigned contracts available.</h4>
}

