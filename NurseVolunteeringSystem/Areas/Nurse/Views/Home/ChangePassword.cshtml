@model NurseVolunteeringSystem.Models.ViewModels.UpdateUserPassword
@{
}
<div class="w-100 " style="background: rgb(255, 215, 0,0.8 )">
    <div class="pt-1 m-0 row">
        <h5 class="text-dark text-center ml-5" style="text-align:center">Change Password</h5>
    </div>
</div>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post" asp-controller="Home" asp-action="ChangePassword" asp-area="Nurse">
            <div class="input-group">
                <div class="col-6 form-group">
                    <label asp-for="OldPassword">Old Password *</label>
                    <input asp-for="OldPassword" type="password" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                    <span asp-validation-for="ConfirmOldPassword" class="text-danger"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="Password">New Password *</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
            </div>
            <div class="input-group">

                <div class="col-6 form-group">
                    <label asp-for="ConfirmPassword">Confirm Password *</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>
            </div>
            <input asp-for="ConfirmOldPassword" hidden class="form-control" />
            <div class="row">
                <div class="offset-2 col-sm-4">
                    <button type="submit" class="btn btn-primary">Change</button>
                </div>
            </div> <div class="row">
                <div class="offset-2 col-sm-4">

                    <a asp-controller="Home" asp-action="HomePage" asp-area="Nurse">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


