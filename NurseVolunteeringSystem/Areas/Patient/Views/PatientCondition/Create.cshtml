@model NurseVolunteeringSystem.Models.PatientChronicCondition

@{
    ViewData["Title"] = "Create";
}
<div class="w-100 " style="background: rgb(255, 215, 0,0.8 )">
    <div class="pt-1 m-0 row">
        <h5 class="text-dark text-center ml-5" style="text-align:center">Chronic condition</h5>
    </div>
</div>
<hr />
<br />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-controller="PatientCondition" asp-area="Patient" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Condition Name *</label>
                <select asp-for="ChronicConditionID" class="form-control" asp-items="@(new SelectList(ViewBag.Conditions, "ChronicConditionID", "ConditionName"))"></select>
                <span asp-validation-for="ChronicConditionID"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
