@model IEnumerable<NurseVolunteeringSystem.Models.PatientChronicCondition>

@{
    ViewData["Title"] = "List";
}
<div class="w-100 bg-primary">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ml-5" style="text-align:center">Chronic Conditions List</h5>
    </div>
</div>
<p>
    <a asp-controller="PatientCondition" asp-area="Patient" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChronicCondition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChronicCondition.Description)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ChronicCondition.ConditionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChronicCondition.Description)
                </td>

                <td>
                    <a asp-action="ConfirmDelete" asp-controller="PatientCondition" asp-area="Patient" asp-route-id="@item.PatientChronicConditionID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
