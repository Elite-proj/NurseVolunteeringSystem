@model IEnumerable<NurseVolunteeringSystem.Models.PatientChronicCondition>

@{
    ViewData["Title"] = "ConfirmDelete";
}

<h1>ConfirmDelete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PatientChronicCondition</h4>
    <hr />

    @foreach (var item in Model)
    {
    <dl class="row">
        <dt>
            @Html.DisplayNameFor(modelItem => item.ChronicCondition.ConditionName)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(modelItem => item.ChronicCondition.ConditionName)
        </dt>

    </dl>
    <div>
        <form asp-area="Patient" asp-controller="PatientCondition" asp-action="Delete" asp-route-id="@item.PatientChronicConditionID" method="post">
            <input type="submit" class="btn btn-danger" value="Delete" /> |
            <a asp-controller="PatientCondition" asp-action="List" asp-area="Patient">Back to List</a>
        </form>


    </div>
    }
</div>
