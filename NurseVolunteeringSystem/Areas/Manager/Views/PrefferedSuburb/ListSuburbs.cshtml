@model NurseVolunteeringSystem.Models.Nurse

@{
    ViewData["Title"] = "ListSuburbs";
}
<div class="w-100 bg-primary">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ml-5" style="text-align:center">Select Nurse</h5>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-controller="PrefferedSuburb" asp-area="Manager" asp-action="ListSuburbs">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NurseID" class="control-label">Select nurse *</label>
                <select asp-for="NurseID" class="form-control" asp-items="ViewBag.Nurses"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
