@model NurseVolunteeringSystem.Areas.Manager.Models.AssignNurseVM

@{
    ViewData["Title"] = "AssignNurse";
}

<div class="w-100 bg-primary">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ml-5" style="text-align:center">Assign Nurse</h5>
    </div>
</div>
<hr />
<br />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="AssignNurse" asp-controller="Contract" asp-area="Manager" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CareContractID" />

            <div class="form-group">
                <label asp-for="NurseID" class="control-label">Nurses *</label>
                <select asp-for="NurseID" class="form-control" asp-items="ViewBag.Nurses"></select>
                <span asp-validation-for="NurseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Contract" asp-action="ListContracts" asp-area="Manager" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
