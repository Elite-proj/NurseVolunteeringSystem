@model IEnumerable<NurseVolunteeringSystem.Models.CareContract>

@{
    ViewData["Title"] = "ListAssignedContracts";
}

<h1>ListAssignedContracts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContractDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suburb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WoundDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartCareDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndCareDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractStatus)
            </th>
            

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContractDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suburb.SuburbName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WoundDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartCareDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndCareDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractStatus)
            </td>
           


            <td>
                <a asp-controller="Contract" asp-area="Manager" asp-action="ContractVisits" asp-route-id="@item.CareContractID">Edit</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>
