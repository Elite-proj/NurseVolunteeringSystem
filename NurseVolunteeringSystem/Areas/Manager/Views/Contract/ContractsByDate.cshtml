@model NurseVolunteeringSystem.Areas.Manager.Models.DateRangeVM

@{
    ViewData["Title"] = "Contract by dates";
}

<div class="w-100 " style="background: rgb(255, 215, 0,0.8 )">
    <div class="pt-1 m-0 row">
        <h5 class="text-dark text-center ml-5" style="text-align:center">Search contract by date</h5>
    </div>
</div>
<hr />
<br />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-controller="Contract" asp-area="Manager" asp-action="ContractsByDate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group">
                <div class="col-6 form-group">
                    <label asp-for="MinDate" class="control-label text-dark">Minimum date *</label>
                    <input asp-for="MinDate" type="date" class="form-control" />
                    <span asp-validation-for="MinDate" class="text-danger"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="MaxDate" class="control-label text-dark">Miximum date *</label>
                    <input asp-for="MaxDate" type="date" class="form-control" />
                    <span asp-validation-for="MaxDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="offset-2 col-sm-4">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Contract" asp-action="ListContracts" asp-area="Manager">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
