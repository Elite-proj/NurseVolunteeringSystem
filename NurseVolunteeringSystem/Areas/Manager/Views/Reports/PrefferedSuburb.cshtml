@model IEnumerable<NurseVolunteeringSystem.Models.PrefferedSuburb>
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "PrefferedSuburb";
}

<style>
    #Report {
        border: 2px;
        border-style: solid;
        border-color: dodgerblue;
    }

    .reportTitle {
        text-align: center;
        margin-top: 40px;
    }

    #HeaderDate {
        text-align: end;
    }

    #headerID {
        right: 0;
    }

    #Footer {
        position: fixed;
        background-color: black;
    }

    #Downloadbtn {
        align-content: end;
    }

    #header12 {
        margin-top: 5px;
    }

    .header {
        margin-bottom: 5px;
    }

    #QuizesButton {
        text-align: end;
        margin-top: 5px;
    }

    #ViewHeader {
        text-align: center;
    }

    #kk {
        text-align: center;
    }
</style>
<div class="w-100 mb-3" id="ViewHeader" style="background: rgb(255, 215, 0,0.8 )">
    <div class="pt-1 m-0 row">
        <h5 id="kk" class="text-dark ml-5 text-center">Prefferd Suburb's Report</h5>
    </div>
</div>
<div class="container-fluid col-12">
    <button id="Downloadbtn" class="btn btn-primary">Report Print</button>
</div>
<div id="report" class="container-fluid mt-2 mb-3">
    <div id="header12" class="container-fluid  row col-12 mt-3 mb-3">
        <div id="headerID" class="container-fluid  col-6">
            <img src="~/css/Lo.jpg" style="width:150px;text-align: center" class="m-0 p-0" />
        </div>
        <div id="HeaderDate" class="container-fluid col-6 m-0 p-0">
            Date Printed: @ViewBag.date <br />
            Year: 2023
        </div>

    </div>
    <div class="container-fluid row col-12">
        <div id="StudentInfo" class="col-6">
          
    </div>
</div>
<h3 class="text-center mb-3">Preffered Suburb's Report</h3>
<table class="table table-strioed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Suburb.SuburbName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Suburb.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suburb.City)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (PrefferedSuburb item in ViewBag.ListPrefferedSubub)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Suburb.SuburbName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Suburb.PostalCode)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Suburb.City)
                </td>

            </tr>
        }
    </tbody>
</table>
<script defer>
    window.onload = function () {
        document.getElementById('PrefferedSuburbInfo').style.visibility = "hidden";
        document.getElementById('header12').style.visibility = "hidden";


    }
    const DownloadBtn = document.getElementById('Downloadbtn');
    DownloadBtn.addEventListener("click", myFunction);

    function myFunction() {
        document.getElementById('Downloadbtn').style.visibility = "hidden";
        document.getElementById('header12').style.visibility = "visible";
        document.getElementById('ViewHeader').style.visibility = "hidden";
        document.getElementById('PrefferedSuburbInfo').style.visibility = "visible";
        window.print();
        document.getElementById('PrefferedSuburbInfo').style.visibility = "hidden";
        document.getElementById('Downloadbtn').style.visibility = "visible";
        document.getElementById('header12').style.visibility = "hidden";
        document.getElementById('ViewHeader').style.visibility = "visible";



    }



</script>